{
  "manifest_version": 2,
  "name": "Highlighter",
  "version": "0.1",
  "browser_action": {
    "default_popup": "ui/login.html",
    "default_icon": "images/yellow-box.png"
  },
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "http://localhost:3000/*",
    "https://high-lighter.herokuapp.com/*",
    "http://high-lighter.herokuapp.com/*",
    "https://www.highlighter.online/",
    "http://www.highlighter.online/"
  ]
}